<!DOCTYPE html>

#parse ($init)

<html class="$root_css_class" dir="#language ("lang.dir")" lang="$w3c_language_id">

<head>
	<title>$the_title - $company_name</title>

	<meta content="initial-scale=1.0, width=device-width" name="viewport" />
	
	<script src="$themeDisplay.getPathThemeRoot()/js/jquery.min.js"></script>

	$theme.include($top_head_include)
		
	<link rel="stylesheet" href="$themeDisplay.getPathThemeRoot()/css/anyplast.css">
	
	<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Montserrat:400,700%7COpen+Sans:300italic,400italic,600italic,700italic,800italic,300,400,600,700">
    <link rel="stylesheet" href="$themeDisplay.getPathThemeRoot()/css/vendor.css">
    <link rel="stylesheet" href="$themeDisplay.getPathThemeRoot()/css/bootstrap.css">
    <link rel="stylesheet" href="$themeDisplay.getPathThemeRoot()/css/custom-main.css">
    <link id="primary_color_scheme" rel="stylesheet" href="$themeDisplay.getPathThemeRoot()/css/theme_meadow.css">
    <link rel="icon" href="$themeDisplay.getPathThemeRoot()/images/favicon.ico" type="image/x-icon" />
    <noscript>
      <link rel="stylesheet" href="$themeDisplay.getPathThemeRoot()/css/styleNoJs.css">
    </noscript>
    
    <script src="$themeDisplay.getPathThemeRoot()/js/vendor/modernizr.js"></script>
    <script src="$themeDisplay.getPathThemeRoot()/js/vendor/plugin.js"></script>
    <script src="$themeDisplay.getPathThemeRoot()/js/vendor/bootstrap.js"></script>
    <script src="$themeDisplay.getPathThemeRoot()/js/vendor/bootstrap-extend.js"></script>
    <script src="$themeDisplay.getPathThemeRoot()/js/vendor/bootstrap-datepicker.js"></script>
    <script src="$themeDisplay.getPathThemeRoot()/js/main.js"></script>
    
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script> 
    <script src="$themeDisplay.getPathThemeRoot()/js/maps/gmaps.js"></script>
    
</head>

<body class="$css_class boxed-layout">

	#if ($is_signed_in)
		#dockbar()
	#end

	<div class="page">
		
		#if ($has_navigation || $is_signed_in)
			#parse ("$full_templates_path/navigation.vm")
		#end
		
		<!-- Start header Section-->
      <section class="demo-2">
        <!-- Start slider-wrapper-->
        <div id="slider" style="display:none;" class="sl-slider-wrapper">
          <div class="sl-slider">
            <!-- start slide-->
            <div data-orientation="horizontal" data-slice1-rotation="-25" data-slice2-rotation="-25" data-slice1-scale="2" data-slice2-scale="2" class="sl-slide">
              <div style="background-image: url($themeDisplay.getPathThemeRoot()/images/intro-home.jpg);" class="sl-slide-inner">
                <div class="slide-container">
                  <div class="slide-content text-center">
                    <h2 class="main-title">ANYPLAST, EL PORTAL DE COMPRA-VENTA DE <span class="text-primary">PLÁSTICO RECICLADO</span></h2>
                    <blockquote>
                      <a class="btn btn-light btn-bordered btn-lg">Login</a>
					  <a href="" target="_blank" class="btn btn-primary btn-lg">Regístrate</a>
                    </blockquote>
                  </div>
                </div>
              </div>
            </div>
            <!-- end slide-->
            <!-- start slide-->
            <div data-orientation="horizontal" data-slice1-rotation="10" data-slice2-rotation="-15" data-slice1-scale="1.5" data-slice2-scale="1.5" class="sl-slide">
              <div style="background: url($themeDisplay.getPathThemeRoot()/images/intro-home.jpg);" class="sl-slide-inner">
                <div class="slide-container">
                  <div class="slide-content text-center">
                    <h2 class="main-title">MIRA QUE HAY EN VENTA<span class="text-primary"></span></h2>
                    <blockquote>
                      <p>Operaciones a tiempo real</p>
                    </blockquote>
                    <blockquote>
                      <a href="" class="btn btn-primary btn-lg">Anuncios de compra</a>
					  <a href="" class="btn btn-primary btn-lg">Anuncios de venta</a>
                    </blockquote>
                  </div>
                </div>
              </div>
            </div>
            <!-- end slide-->
            <!-- start slide-->
            <div data-orientation="horizontal" data-slice1-rotation="3" data-slice2-rotation="3" data-slice1-scale="2" data-slice2-scale="1" class="sl-slide">
              <div style="background: url($themeDisplay.getPathThemeRoot()/images/intro-home.jpg);" class="sl-slide-inner">
                <div class="slide-container">
                  <div class="slide-content text-center">
                    <h2 class="main-title">OPERAR EN ANYPLAST ES <span class="text-primary">FÁCIL</span></h2>
                    <blockquote>
                      <a href="" class="btn btn-primary btn-lg">Sobre Anyplast</a>
					  <a href="" class="btn btn-primary btn-lg">Preguntas frecuentes</a>
					  <a href="" class="btn btn-primary btn-lg">Video tutorial</a>
                    </blockquote>
                  </div>
                </div>
              </div>
            </div>
            <!-- end slide-->
            <!-- start slide-->
            <div data-orientation="horizontal" data-slice1-rotation="3" data-slice2-rotation="3" data-slice1-scale="1.5" data-slice2-scale="0.5" class="sl-slide">
              <div style="background: url($themeDisplay.getPathThemeRoot()/images/intro-home.jpg);" class="sl-slide-inner">
                <div class="slide-container">
                  <div class="slide-content text-center">
                    <h2 class="main-title">MÁS QUE ANUNCIOS<span class="text-primary"></span></h2>
                    <blockquote>
                      <ul>
                      	<li>Muestras</li>
                      	<li>Pruebas</li>
                      	<li>Certificaciones</li>
                      	<li>Gestión</li>
                      	<li>Transporte</li>
                      </ul>
                    </blockquote>
                  </div>
                </div>
              </div>
            </div>
            <!-- end slide-->
          </div>
          <!-- start slider navigation-->
          <nav id="nav-arrows" class="nav-arrows"><span class="nav-arrow-prev">Previous</span><span class="nav-arrow-next">Next</span></nav>
          <nav id="nav-dots" class="nav-dots"><span class="nav-dot-current"></span><span></span><span></span><span></span></nav>
          <!-- end slider navigation-->
        </div>
        <!-- End slider-wrapper-->
      </section>
		
		$theme.include($body_top_include)
		
		<div class="container-fluid" id="wrapper">
		
			<div id="content">
				<nav id="breadcrumbs">#breadcrumbs()</nav>
		
				#if ($selectable)
					$theme.include($content_include)
				#else
					$portletDisplay.recycle()
		
					$portletDisplay.setTitle($the_title)
		
					$theme.wrapPortlet("portlet.vm", $content_include)
				#end
			</div>
			
			<footer id="footer">
		        <div class="inner sep-bottom-md">
		          <div class="container">
		            <div class="row">
		              <div class="col-md-4 col-sm-6">
		                <div class="widget sep-top-lg"><img src="$themeDisplay.getPathThemeRoot()/images/logo-dark.jpg" alt="" class="logo"><small class="sep-top-xs sep-bottom-md"></small>
		                  <h6 class="upper widget-title">Síguenos en</h6>
		                  <ul class="social-icon sep-top-xs">
		                    <li><a href="#" class="fa fa-linkedin fa-lg"></a></li>
		                    <li><a href="#" class="fa fa-twitter fa-lg"></a></li>
		                    <li><a href="#" class="fa fa-facebook fa-lg"></a></li>
		                    <li><a href="#" class="fa fa-google-plus fa-lg"></a></li>
		                  </ul>
		                </div>
		              </div>
		              <div class="col-md-4 col-sm-6">
		                <div class="widget sep-top-lg">
		                  <h6 class="upper widget-title"></h6>
		                  <ul class="widget-address sep-top-xs">
		                    <li><i class="fa fa-info-circle fa-lg"></i><small>Anyrecycled S.L. <br/>B 66424243</small></li>
		                    <li><i class="fa fa-map-marker fa-lg"></i><small>C/La Rasa, 52<br/>08221 Terrassa<br/>(Barcelona)</small></li>
		                    <li><i class="fa fa-phone fa-lg"></i><small>(+34) 930 13 53 25 <br>(+34) 615 92 33 22</small></li>
		                    <li><i class="fa fa-envelope fa-lg"></i><small><a href="#">info@anyplast.com</a></small></li>
		                    <li><i class="fa fa-clock-o fa-lg"></i><small>Lunes / Viernes<br>08:00 - 19:00</small></li>
		                  </ul>
		                </div>
		              </div>
		              <div class="col-md-4 col-sm-6">
		                <div class="widget sep-top-lg">
		                  <h6 class="upper widget-title">Google Maps</h6>
		                  <div id="map_canvas" style="width: 100%; height: 225px;"></div>
		                </div>
		              </div>
		            </div>
		          </div>
		        </div>
		        <div class="copyright sep-top-xs sep-bottom-xs">
		          <div class="container">
		            <div class="row">
		              <div class="col-md-3"><small>Copyright 2014 © Anyrecycled S.L.</small></div>
		              <div class="col-md-3"><small><a href="/aviso-legal">Aviso legal</a></small></div>
		              <div class="col-md-3"><small><a href="/politica-privacidad">Política de privacidad</a></small></div>
		              <div class="col-md-3"><small><a href="/politica-devoluciones">Política de devoluciones</a></small></div>
		            </div>
		          </div>
		        </div>
		      </footer>
			
		</div>
		
		$theme.include($body_bottom_include)
		
		$theme.include($bottom_include)

	</div>

	<script type="text/javascript">
      initialize('C/La Rasa, 52 Barcelona', 'Anyplast');
    </script>

</body>

</html>